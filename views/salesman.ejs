<!DOCTYPE html>
<html lang="en">
<head>
  <title>Salesman Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100">

  <!-- Navbar -->
  <header class="bg-white shadow-md py-4 px-6 flex justify-between items-center">
    <h1 class="text-2xl font-bold text-gray-800">Salesman Dashboard</h1>

    <div class="flex items-center gap-4">
      <span class="text-gray-700 font-semibold"><%= salesman.name %></span>
      <img src="<%= salesman.profilePhoto %>" alt="Profile" class="w-10 h-10 rounded-full border">
    </div>
  </header>

  <div class="max-w-7xl mx-auto p-6">

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-10">

      <!-- Products -->
      <div class="bg-gradient-to-r from-blue-500 to-blue-600 text-white p-6 rounded-xl shadow-lg">
        <h2 class="text-lg font-semibold">Total Products</h2>
        <p class="text-4xl font-bold mt-3"><%= products.length %></p>
      </div>

      <!-- Customers -->
      <div class="bg-gradient-to-r from-green-500 to-green-600 text-white p-6 rounded-xl shadow-lg">
        <h2 class="text-lg font-semibold">Customers Handled</h2>
        <p class="text-4xl font-bold mt-3"><%= salesman.customersHandled %></p>
      </div>

      <!-- Commission -->
      <div class="bg-gradient-to-r from-purple-500 to-purple-600 text-white p-6 rounded-xl shadow-lg">
        <h2 class="text-lg font-semibold">Commission Rate</h2>
        <p class="text-4xl font-bold mt-3"><%= salesman.commissionRate %>%</p>
      </div>

    </div>

    <!-- My Products -->
    <div class="bg-white shadow-lg rounded-xl p-6">

      <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-semibold text-gray-800">Your Products</h2>

        <a href="/addproduct"
           class="bg-blue-600 hover:bg-blue-700 text-white px-5 py-2 rounded-lg font-medium shadow-md">
          + Add Product
        </a>
      </div>

      <!-- Products Table -->
      <div class="overflow-x-auto">

        <table class="min-w-full border border-gray-300 rounded-xl overflow-hidden">
          <thead>
            <tr class="bg-gray-200 border-b">
              <th class="p-4 text-left font-semibold text-gray-700">Image</th>
              <th class="p-4 text-left font-semibold text-gray-700">Product Name</th>
              <th class="p-4 text-left font-semibold text-gray-700">Price</th>
              <!-- <th class="p-4 text-left font-semibold text-gray-700">Stock</th> -->
              <th class="p-4 text-left font-semibold text-gray-700">Actions</th>
            </tr>
          </thead>

          <tbody>
            <% products.forEach(product => { %>

            <tr class="border-b hover:bg-gray-50 transition">
              <td class="p-4">
                <img src="<%= product.product_image.url %>" class="h-14 w-14 rounded-lg shadow-sm">
              </td>

              <td class="p-4 font-medium text-gray-900"><%= product.product_name %></td>

              <td class="p-4 font-semibold text-gray-700">â‚¹<%= product.price %></td>

              <!-- <td class="p-4 text-gray-600"><%= product.stock %></td> -->

              <td class="p-4 flex gap-3">

                <a href="edit/<%= product._id %>"
                   class="px-4 py-1.5 bg-green-500 hover:bg-green-600 text-white rounded-lg shadow">
                  Edit
                </a>

                <a href="/<%= product._id %>"
                   class="px-4 py-1.5 bg-red-500 hover:bg-red-600 text-white rounded-lg shadow">
                  Delete
                </a>

              </td>
            </tr>

            <% }) %>
          </tbody>

        </table>

      </div>

    </div>

  </div>

</body>
</html>
