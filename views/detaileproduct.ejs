<!-- Product Details Page Body -->
<div class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100 py-8 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
        <!-- Breadcrumb -->
        <nav class="mb-8 flex items-center gap-2 text-sm">
            <a href="/" class="text-gray-600 hover:text-gray-900">Home</a>
            <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
            <a href="/products" class="text-gray-600 hover:text-gray-900">Products</a>
            <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
            <span class="text-gray-900 font-medium"><%= product.product_name %></span>
        </nav>

        <!-- Product Details Container -->
        <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 p-6 lg:p-10">
                <!-- Product Image Section -->
                <div class="space-y-4">
                    <div class="relative aspect-square rounded-xl overflow-hidden bg-gray-100">
                        <img 
                            src="<%= product.product_image.url %>" 
                            alt="<%= product.product_name %>"
                            class="w-full h-full object-cover"
                            id="mainImage"
                        />
                        
                        <!-- Discount Badge -->
                        <% if (product.discount > 0) { %>
                            <div class="absolute top-4 right-4 bg-red-500 text-white px-4 py-2 rounded-full text-lg font-bold shadow-lg">
                                -<%= product.discount %>% OFF
                            </div>
                        <% } %>
                    </div>

                    <!-- Thumbnail Gallery (if you have multiple images in future) -->
                    <div class="grid grid-cols-4 gap-3">
                        <div class="aspect-square rounded-lg overflow-hidden border-2 border-blue-500 cursor-pointer">
                            <img 
                                src="<%= product.product_image.url %>" 
                                alt="Thumbnail"
                                class="w-full h-full object-cover"
                            />
                        </div>
                        <div class="aspect-square rounded-lg overflow-hidden border-2 border-gray-200 cursor-pointer bg-gray-100 flex items-center justify-center">
                            <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                            </svg>
                        </div>
                        <div class="aspect-square rounded-lg overflow-hidden border-2 border-gray-200 cursor-pointer bg-gray-100 flex items-center justify-center">
                            <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                            </svg>
                        </div>
                        <div class="aspect-square rounded-lg overflow-hidden border-2 border-gray-200 cursor-pointer bg-gray-100 flex items-center justify-center">
                            <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                            </svg>
                        </div>
                    </div>
                </div>

                <!-- Product Information Section -->
                <div class="space-y-6">
                    <!-- Title and Rating -->
                    <div>
                        <h1 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-3">
                            <%= product.product_name %>
                        </h1>
                        
                        <div class="flex items-center gap-4 mb-2">
                            <div class="flex items-center gap-1">
                                <% for(let i = 0; i < 5; i++) { %>
                                    <svg class="w-5 h-5 <%= i < product.rating ? 'text-yellow-400' : 'text-gray-300' %> fill-current" viewBox="0 0 20 20">
                                        <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
                                    </svg>
                                <% } %>
                            </div>
                            <span class="text-gray-600">(<%= product.rating %>/5)</span>
                            <span class="text-gray-400">|</span>
                            <span class="text-gray-600">256 Reviews</span>
                        </div>
                        
                        <p class="text-gray-600 text-lg">
                            <%= product.sort_description %>
                        </p>
                    </div>

                    <!-- Price Section -->
                    <div class="border-t border-b border-gray-200 py-6">
                        <div class="flex items-baseline gap-4">
                            <% if (product.discount > 0) { %>
                                <span class="text-4xl font-bold text-gray-900">
                                    $<%= (product.price * (1 - product.discount / 100)).toFixed(2) %>
                                </span>
                                <span class="text-2xl text-gray-500 line-through">
                                    $<%= product.price.toFixed(2) %>
                                </span>
                                <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm font-semibold">
                                    Save $<%= (product.price * product.discount / 100).toFixed(2) %>
                                </span>
                            <% } else { %>
                                <span class="text-4xl font-bold text-gray-900">
                                    $<%= product.price.toFixed(2) %>
                                </span>
                            <% } %>
                        </div>
                    </div>

                    <!-- Color Selection -->
                    <% if (product.color && product.color.length > 0) { %>
                        <div>
                            <h3 class="text-lg font-semibold text-gray-900 mb-3">Available Colors</h3>
                            <div class="flex flex-wrap gap-3">
                                <% product.color.forEach((color, index) => { %>
                                    <button 
                                        class="w-12 h-12 rounded-full border-2 <%= index === 0 ? 'border-blue-600 ring-2 ring-blue-200' : 'border-gray-300' %> hover:border-blue-600 transition-all"
                                        style="background-color: <%= color %>"
                                        title="<%= color %>"
                                    ></button>
                                <% }) %>
                            </div>
                        </div>
                    <% } %>

                    <!-- Quantity Selector -->
                    <div>
                        <h3 class="text-lg font-semibold text-gray-900 mb-3">Quantity</h3>
                        <div class="flex items-center gap-4">
                            <div class="flex items-center border border-gray-300 rounded-lg">
                                <button class="px-4 py-2 text-gray-600 hover:bg-gray-100 transition-colors">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"></path>
                                    </svg>
                                </button>
                                <input 
                                    type="number" 
                                    value="1" 
                                    min="1" 
                                    class="w-16 text-center border-x border-gray-300 py-2 focus:outline-none"
                                />
                                <button class="px-4 py-2 text-gray-600 hover:bg-gray-100 transition-colors">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                                    </svg>
                                </button>
                            </div>
                            <span class="text-green-600 font-medium">In Stock</span>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="flex flex-col sm:flex-row gap-4 pt-4">
                        <button class="flex-1 bg-blue-600 hover:bg-blue-700 text-white py-4 px-8 rounded-xl font-semibold text-lg transition-colors flex items-center justify-center gap-2">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
                            </svg>
                            Add to Cart
                        </button>
                        <button class="bg-gray-100 hover:bg-gray-200 text-gray-900 py-4 px-8 rounded-xl font-semibold text-lg transition-colors flex items-center justify-center gap-2">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                            </svg>
                            Wishlist
                        </button>
                    </div>

                    <!-- Additional Info -->
                    <div class="bg-gray-50 rounded-xl p-6 space-y-3">
                        <div class="flex items-center gap-3">
                            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span class="text-gray-700">Free shipping on orders over $50</span>
                        </div>
                        <div class="flex items-center gap-3">
                            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span class="text-gray-700">30-day return guarantee</span>
                        </div>
                        <div class="flex items-center gap-3">
                            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span class="text-gray-700">Secure payment processing</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Product Description Tab -->
            <div class="border-t border-gray-200 p-6 lg:p-10">
                <div class="mb-6">
                    <div class="flex gap-6 border-b border-gray-200">
                        <button class="pb-4 px-2 border-b-2 border-blue-600 text-blue-600 font-semibold">
                            Description
                        </button>
                        <button class="pb-4 px-2 border-b-2 border-transparent text-gray-600 hover:text-gray-900">
                            Specifications
                        </button>
                        <button class="pb-4 px-2 border-b-2 border-transparent text-gray-600 hover:text-gray-900">
                            Reviews
                        </button>
                    </div>
                </div>

                <div class="prose max-w-none">
                    <h2 class="text-2xl font-bold text-gray-900 mb-4">Product Description</h2>
                    <p class="text-gray-700 leading-relaxed text-lg">
                        <%= product.description %>
                    </p>
                </div>
            </div>
        </div>

        <!-- Related Products Section -->
        <div class="mt-16">
            <h2 class="text-3xl font-bold text-gray-900 mb-8">You May Also Like</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
                <!-- Placeholder for related products -->
                <% for(let i = 0; i < 4; i++) { %>
                    <div class="bg-white rounded-xl shadow-md p-4">
                        <div class="aspect-square bg-gray-200 rounded-lg mb-4"></div>
                        <div class="h-4 bg-gray-200 rounded mb-2"></div>
                        <div class="h-4 bg-gray-200 rounded w-2/3"></div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>